@model ChangePasswordViewModel
@inject IHttpContextAccessor a
@{
    ViewData["Title"] = "Register";
}
<div class="card">
    <h1 class="card-header">
        修改密码
    </h1>
    <form class="card-body" method="post">
        <h4>
            正在为用户 @a.HttpContext.User.Identity.Name 修改密码
        </h4>
        <input style="visibility:hidden;" type="text" asp-for="Name" value="@a.HttpContext.User.Identity.Name"/>
        <div>
            <p>旧密码</p>
            <input type="password" asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div>
            <p>新密码</p>
            <input type="password" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div>
            <button class="btn btn-primary" asp-action="ChangePassword">修改</button>
        </div>
    </form>
</div>